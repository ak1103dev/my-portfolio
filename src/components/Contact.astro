        <a
            href={`mailto:${t("contact.email")}`}
            class="inline-block bg-accent dark:bg-accent-dark text-white font-bold py-3 px-8 rounded-full hover:bg-opacity-90 dark:hover:bg-opacity-90 transition-all text-lg"
