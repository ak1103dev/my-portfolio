---
// src/components/Skills.astro
import { useTranslations, Language } from '../i18n/utils';

export interface Props {
    lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const skills = {
    [t('skills.languages')]: ["JavaScript", "TypeScript", "HTML5", "CSS3", "Unix"],
    [t('skills.frameworks')]: ["Astro", "React", "Next.js", "Node.js", "Tailwind CSS", "Nest.js", "Ant.design"],
    [t('skills.tools')]: ["Git", "GitHub", "Docker", "Kubernetes", "Vim"],
    [t('skills.databases')]: ["MySQL", "PostgreSQL", "MongoDB"]
};
---
<section id="skills" class="py-20 px-4">
    <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-12 text-primary-text-light dark:text-primary-text-dark">
            {t('skills.title')}
        </h2>

        {Object.entries(skills).map(([category, items]) => (
            <div class="mb-12">
                <h3 class="text-2xl font-bold mb-6 text-primary-text-light dark:text-primary-text-dark/80">{category}</h3>
                <div class="flex flex-wrap justify-center gap-3">
                    {items.map(item => (
                        <span class="bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 py-2 px-4 rounded-full text-base font-medium">
                            {item}
                        </span>
                    ))}
                </div>
            </div>
        ))}
    </div>
</section>
